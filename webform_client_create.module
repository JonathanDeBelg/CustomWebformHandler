<?php

function webform_client_creator_mail($key, &$message, $params) {
  switch ($key) {
    case 'create_user':
    case 'general_mail':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      $message['subject'] = $params['subject'];
      $message['body'][] = Html::escape($params['body']);
      break;
  }
}
